#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

#define DEFAULT 0
#define NAVI    2
#define SYMBOL  1
#define NUMPAD  3
#define MEDIA   4

#define MO_TOG(layer) &mo_tog layer layer

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        bindings = <
   &kp ESC   &kp N1 &kp N2 &kp N3 &kp N4 &kp N5                           &kp N6   &kp N7     &kp N8    &kp N9    &kp N0    &kp DEL
   &kp TAB   &kp Q  &kp W  &kp E  &kp R  &kp T                            &kp Y    &kp U      &kp I     &kp O     &kp P     &kp BSLH
   &kp LSHFT &kp A  &kp S  &kp D  &kp F  &kp G                            &kp H    &kp J      &kp K     &kp L     &kp SQT   &kp RET
   &kp LCTRL &kp Z  &kp X  &kp C  &kp V  &kp B &kp none          &kp none &kp N    &kp M      &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT
        &kp LALT &kp LGUI &kp SPACE &mo SYMBOL                            &mo NAVI &mo NUMPAD &kp BSPC  &mo MEDIA
                        >;
                };

                symbol_layer {
                        bindings = <
   &kp F1 &kp F2     &kp F3    &kp F4    &kp F5    &kp F6                        &kp F7    &kp F8    &kp F9    &kp F10  &kp F11  &kp F12
   &trans &kp GRAVE  &kp EXCL  &kp AT    &kp PLUS  &kp AMPS                      &kp SEMI  &kp LBKT  &kp RBKT  &none    &none    &trans
   &trans &kp ASTRK  &kp CARET &kp PRCNT &kp DLLR  &kp PIPE                      &kp COLON &kp LPAR  &kp RPAR  &kp LT   &kp GT   &trans
   &trans &kp BSLH   &kp SLASH &kp EQUAL &kp MINUS &kp HASH &trans        &trans &kp UNDER &kp LBRC  &kp RBRC  &none    &none    &trans
                     &trans    &trans    &trans    &trans                        &trans    &trans    &trans    &trans
                        >;
                };

                navigation_layer {
                        bindings = <
   &trans    &trans    &trans    &trans   &trans   &trans                     &trans   &trans    &trans    &trans     &trans &trans
   &trans    &trans    &trans    &trans   &trans   &trans                     &kp HOME &kp PG_DN &kp PG_UP &kp END    &trans &trans
   &trans    &trans    &trans    &trans   &trans   &trans                     &kp LEFT &kp DOWN  &kp UP    &kp RIGHT  &trans &trans
   &trans    &trans    &trans    &trans   &trans   &trans &trans       &trans &trans   &trans    &trans    &trans     &trans &trans
                              &trans &trans &trans &trans                     &trans  &trans  &trans  &trans
                        >;
                };

                numpad_layer {
// -----------------------------------------------------------------------------------------
// |     |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// |     | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// |     |     |     |     |     |     |   |     |     |     |     |     |      |
//                    |     | ALT |     |   |     |     |     |
                        bindings = <
   &trans  &trans  &trans  &trans  &trans  &trans                        &trans     &trans  &trans  &trans  &trans    &trans
   &trans  &trans  &trans  &trans  &trans  &trans                        &kp SLASH  &kp N7  &kp N8  &kp N9  &kp PLUS  &trans
   &trans  &trans  &trans  &trans  &trans  &trans                        &kp ASTRK  &kp N4  &kp N5  &kp N6  &kp MINUS &trans
   &trans  &trans  &trans  &trans  &trans  &trans &trans          &trans &kp COMMA  &kp N1  &kp N2  &kp N3  &kp DOT   &trans
                      &trans     &trans   &trans                         &trans     &trans  &kp N0  &trans
                        >;
                };

                media_layer {
// -----------------------------------------------------------------------------------------
// |     |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// |     | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// |     |     |     |     |     |     |   |     |     |     |     |     |      |
//                    |     | ALT |     |   |     |     |     |
                        bindings = <
   &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4                         &trans   &trans        &trans        &trans           &trans  &trans
   &trans      &trans       &trans       &trans       &trans       &trans                               &trans   &kp C_VOL_DN  &kp C_VOL_UP  &kp C_MUTE       &trans  &trans
   &trans      &trans       &trans       &trans       &trans       &trans                               &trans   &kp C_PREV    &kp C_NEXT    &kp C_PLAY_PAUSE &trans  &trans
   &trans      &trans       &trans       &trans       &trans       &trans        &trans          &trans &trans   &trans        &trans        &trans           &trans  &trans
               &trans       &trans       &trans       &ext_power EP_TOG                                 &kp CAPS &trans      &trans   &trans
                        >;
                };
        };
};
